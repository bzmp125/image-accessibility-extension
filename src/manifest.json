{
  "name": "Alt Attributes Extension",
  "version": "0.1",
  "description": "An extension to set alt attributes on image content on web pages to improve accessibility",
  "author": "Michael Dera",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "homepage_url": "",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
